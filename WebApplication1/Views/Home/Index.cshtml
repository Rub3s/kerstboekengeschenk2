<script>
    $("form").validate({
        ignore: "",
        // Specify validation rules
        rules: {
            keuze1: "required",
            keuze2: "required",
            keuze3: "required"
        },
        // Specify validation error messages
        messages: {
            keuze1: "U moet een boek kiezen voor keuze 1!",
            keuze2: "U moet een boek kiezen voor keuze 2!",
            keuze3: "U moet een boek kiezen voor keuze 3!"
        },
        // Make sure the form is submitted to the destination defined
        // in the "action" attribute of the form when valid
        submitHandler: function (form) {
            form.submit();
        },
        invalidHandler: function (event, validator) {
            $("#errorDiv").show();
        },
        errorLabelContainer: "#errorDiv",
        wrapper: "p"
    });

    function toggleActive(thisElement)
    {
        var keuzeNummer = $(thisElement).attr("data-keuze");
        $(".btn[data-keuze='" + keuzeNummer + "']").removeClass("active");
        $(thisElement).siblings().removeClass("active");
        $(thisElement).addClass("active");

        $("#keuze" + keuzeNummer).val($(thisElement).attr("data-id"));
    }
</script>